{
	"compilerOptions": {
		"allowJs": true,
		"target": "es5",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "Node16",
		"moduleResolution": "node16",
		"rootDir": "./src",
		"baseUrl": ".",
		"outDir": "./dist",
		"removeComments": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@types", ".src/@types"]
	},
	"ts-node": {
    "esm": true,
  },
	"include": ["src/**/*"],
}
