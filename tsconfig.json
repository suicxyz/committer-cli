{
	"compilerOptions": {
		"allowJs": true,
		"target": "es5",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "Node16",
		"moduleResolution": "node16",
		"rootDir": "./src",
		"baseUrl": ".",
		"outDir": "./lib",
		"removeComments": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
	},
	"ts-node": {
    "esm": true,
  },
	"include": ["src/**/*"],
}
